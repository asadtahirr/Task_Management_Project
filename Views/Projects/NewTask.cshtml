@model NewTaskViewModel

@{
    ViewData["Title"] = "NewTask";
}

<h1>NewTask</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="createProjectTask" asp-route-id="@ViewData["ProjectId"]" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Title" class="control-label">Title</label>
                <input name="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Priority" class="control-label">Priority</label>
                <select asp-items="Html.GetEnumSelectList<Priority>()" name="Priority" class="form-control">
                     <option selected="selected" value=""></option>
                </select>
            </div>
            <div class="form-group">
                <label for="RequiredHours" class="control-label">Required Hours</label>
                <input name="RequiredHours" class="form-control" />
            </div>

            <div class="form-group">
                <p>Available developers for this project:</p>

                <p>
                    @foreach (string email in Model.DeveloperEmails)
                    {
                        <span>@email</span>
                    }
                </p>

                <label for="AssignedDeveloperEmail" class="control-label">Developer Email</label>
                <input type="text" name="AssignedDeveloperEmail" class="form-control" />
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
